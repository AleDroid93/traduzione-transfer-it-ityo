# FRASI:
# Skywalker corre veloce
# Il futuro di questo ragazzo è nebuloso
# Tu hai molto da apprendere ancora

% start S
############################
# Grammar Rules
#############################

S[PER=?p, SEM = <?subj(?vp)>] -> NP[NUM=?n,PER=?p, SEM=?subj] VP[NUM=?n,PER=?p,SEM=?vp]
S[PER=?p, TNS=?t, SEM = <?subj(?vp)>] -> NP[NUM=?n,PER=?p, SEM=?subj] VP[NUM=?n,PER=?p,TNS=?t, SEM=?vp]

NP[NUM=?n,PER=?p, SEM=<?det(?nom)> ] -> Det[NUM=?n,SEM=?det] N[NUM=?n,PER=?p, SEM=?nom]
NP[NUM=?n,PER=?p, SEM=<?det(?nom)> ] -> Det[NUM=?n,SEM=?det] X[NUM=?n,PER=?p, SEM=?nom]
NP[NUM=?n,PER=?p, SEM=<?dadj(?nom)> ] -> DAdj[NUM=?n,SEM=?dadj] N[NUM=?n,PER=?p, SEM=?nom]
NP[LOC=?l,NUM=?n, PER=2, SEM=<\P.P(tu)>] -> 'Tu'
NP[LOC=?l,NUM=?n, PER=3, SEM=<\P.P(skywalker)>] -> 'Skywalker'

X[NUM=?n,PER=?p, SEM=<?nom(?pp)>] -> N[NUM=?n,PER=?p, SEM=?nom] PP[+DI,PER=?p,SEM=?pp]

VP[NUM=?n, PER=3, SEM=<\x.corre(x)>] -> 'corre'
VP[NUM=?n, PER=2, SEM=<\x.corre(x)>] -> 'corri'
VP[NUM=?n,PER=?p, SEM=<?v(?mod)>] -> IV[NUM=?n,PER=?p, SEM=?v] Adv[SEM=?mod]
VP[NUM=?n,PER=?p, SEM=<?v(?mod)>] -> TV[NUM=?n,PER=?p, SEM=?v] Adv[SEM=?mod]
VP[NUM=?n,PER=?p, SEM=<?v(?obj)>] -> TV[NUM=?n,PER=?p, SEM=?v] NP[SEM=?obj]
VP[NUM=?n,PER=?p, SEM=<?v(?mod)>] -> Aux[NUM=?n,PER=?p, SEM=?v] Adj[SEM=?mod]
VP[NUM=?n,PER=?p, SEM=<?v(?mod)>] -> Aux[NUM=?n,PER=?p, SEM=?v] Adv[SEM=?mod]
VP[NUM=?n,PER=?p,TNS=?t, SEM=<?v(?mod)>] -> Aux[NUM=?n,PER=?p, SEM=?v] Y[NUM=?n, PER=?p,TNS=?t, SEM=?mod]
VP[NUM=?n,PER=?p, SEM=<?v(?obj)>] -> TV[NUM=?n,PER=?p, SEM=?v] NP[SEM=?obj]

Y[NUM=?n,PER=?p,TNS=?t, SEM=<?adv(?vp)>] -> Adv[SEM=?adv] PVP[NUM=?n, PER=?p,TNS=?t, SEM=?vp]
PVP[NUM=?n, PER=?p,TNS=?t, SEM=?vp] -> P[+DA, SEM=?vp] ZP[NUM=?n,PER=?p,TNS=?t, SEM=?vp]
ZP[NUM=?n,PER=?p,TNS=infi, SEM=<?v(?mod)>] -> TV[NUM=?n,PER=?p,TNS=infi, SEM=?v] Adv[SEM=?mod]

PP[+DI, PER=?p, SEM=?np] -> P[+DI, SEM=?np] NP[NUM=?n, PER=?p, SEM=?np]
#############################
# Lexical Rules
#############################

## Tutto ciò che è racchiuso nelle quadre rappresenta elementi di un dict di Python. Gli elementi sono detti "features"

Det[NUM=sg,SEM=<\P Q.all x.(P(x) -> Q(x))>] -> 'every'
Det[NUM=pl,SEM=<\P Q.all x.(P(x) -> Q(x))>] -> 'all'
Det[SEM=<\P Q.exists x.(P(x) & Q(x))>] -> 'some'
Det[NUM=sg,SEM=<\P Q.exists x.(P(x) & Q(x))>] -> 'a'
Det[NUM=sg,SEM=<\P Q.exists x.(P(x) & Q(x))>] -> 'an'

N[NUM=sg,PER=3, SEM=<\x.ragazzo(x)>] -> 'ragazzo'
N[NUM=sg, PER=3, SEM=<\x.futuro(x)>] -> 'futuro'

# nebuloso potrebbe essere avverbio

Adj[SEM=<\x.nebuloso(x)>] -> 'nebuloso'
DAdj[SEM=<\x.questo(x)>] -> 'questo'

Adv[SEM=<\x.veloce(x)>] -> 'veloce'
Adv[SEM=<\x.ancora(x)>] -> 'ancora'
Adv[SEM=<\x.molto(x)>] -> 'molto'
 
Det[NUM=sg,SEM=<\P Q.exists x.((P(x) & Q(x)) & all y.(P(y) -> (x = y)))>] -> 'il' | 'Il'

# IV sta per verbo intransitivo
 
#IV[NUM=sg, PER=1, SEM=<\x.corre(x)>, TNS=pres] -> 'corro'
IV[NUM=sg, PER=2, SEM=<\x.corre(x)>, TNS=pres] -> 'corri'
IV[NUM=sg, PER=3, SEM=<\x.corre(x)>, TNS=pres] -> 'corre'
#IV[NUM=pl, PER=1, SEM=<\x.corre(x)>, TNS=pres] -> 'corriamo'
#IV[NUM=pl, PER=2, SEM=<\x.corre(x)>, TNS=pres] -> 'correte'
#IV[NUM=pl, PER=3, SEM=<\x.corre(x)>, TNS=pres] -> 'corrono'

TV[NUM=sg,SEM=<\X x.X(\y.apprendere(x,y))>,TNS=infi] -> 'apprendere'

Aux[+COP,NUM=sg, PER=3, SEM=<\P x.P(x)>,tns=pres] -> 'è'
Aux[+COP,NUM=sg, PER=2, SEM=<\P x.P(x)>, tns =pres] -> 'sei'
Aux[+COP,NUM=sg, PER=2, SEM=<\P x.P(x)>,tns=pres] -> 'hai'

P[+di] -> 'di'
P[+da] -> 'da'
